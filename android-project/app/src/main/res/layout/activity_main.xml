<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ImageView android:layout_width="247dp"
               android:layout_height="207dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:src="@drawable/logo" android:importantForAccessibility="no" android:layout_marginTop="36dp"
               app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeText"
            android:text="@string/welcome"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.389"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/to_the_recipehub"
              android:id="@+id/secondWelcomeText"
              android:textSize="15sp"
              app:layout_constraintTop_toBottomOf="@id/welcomeText"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/description"
              android:text="@string/descriptionText"
              app:layout_constraintTop_toBottomOf="@id/secondWelcomeText"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="36dp"
              app:layout_constraintHorizontal_bias="0.509"/>
    <Button
            android:id="@+id/startButton"
            android:layout_width="148dp"
            android:layout_height="49dp"
            android:text="@string/get_started"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description" android:layout_marginTop="52dp"
            app:layout_constraintHorizontal_bias="0.493"/>


</androidx.constraintlayout.widget.ConstraintLayout>